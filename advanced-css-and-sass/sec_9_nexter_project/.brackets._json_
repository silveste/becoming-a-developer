//Brackets uses libsass 3.2 wich do not support grid names
//This file won't be used and remains here as an example
{
    "sass.enabled": false,
    "path": {
        "sass/main.scss": {
            "sass.enabled": true,
            "sass.options": {
                "outputDir": "../css/",
                "output": "style.css",
                "includePaths": [
                    "./sass"
                ],
                "sourceComments": true,
                "outputStyle": "nested"
            },
            "brackets-git.gitPath": "git",
            "linting.collapsed": true
        }
    }
}
