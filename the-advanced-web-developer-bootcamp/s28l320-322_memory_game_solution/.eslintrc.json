{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React"
      },
      "propWrapperFunctions": [ "forbidExtraProps" ]
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-unused-vars": "warn",
        "quotes": [
            "warn",
            "single"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "warn",
        "semi": [
            "error",
            "always"
        ]
    }
}
