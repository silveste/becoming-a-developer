<% include ./partials/header %>
<div class="ui main text container segment">
    <header class="ui huge header">Edit Blog</header>
    <form  class="ui form" action="/articles/<%= article._id %>?_method=PUT" method="POST" >
        <div class="field">
            <label>Title</label>
            <input class type="text" name="article[title]" value="<%= article.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="article[image]" value="<%= article.image %>">
        </div>
        <div class="field">
            <label>Content</label>
            <textarea name="article[body]" ><%= article.body %></textarea>
        </div>
        <input class="ui positive button" type="submit" value="Submit">
    </form>
    
</div>
<% include ./partials/footer %>