<% include ../partials/header %>


<div class="container">
  <h1 style="text-align: center;">Edit Comment</h1>
  <div class="row">
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <textarea rows="4" class="form-control" type="text" name="comment[text]" style="resize: none;"><%= comment.text %></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-info btn-block" >Submit</button>
          </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>">Go Back &raquo;</a>
    </div>
  </div>

</div>

<% include ../partials/footer %>
